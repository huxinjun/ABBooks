<view class="container">

    <view class="item" hover-class='item_hover' style='border-bottom:1rpx solid #ccc;' bindtap='gotoDetail' wx:for="{{items}}" wx:key="{{index}}" data-index='{{index}}'>
        <view class='flag' data-index='{{index}}'></view>
        <text class="name" data-index='{{index}}'>{{item.name}}</text>
        <image class="arrow" src="/img/right_arrow_normal.png" data-index='{{index}}'></image>
    </view>

</view>