@import "/global/dialog.wxss";

.container {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: flex-start;
    font-family: "黑体";
    color: #272636;
    
}
/**苹果手机textArea有自带的padding,导致内容和上面的标题等左对不齐,只能通过特殊方法margin来适配*/
.iphone{
    margin-left: -8rpx;
}

.accounts{
    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;
}

.account{
    
    background: gold;
    
}
.account_icon{
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 20rpx;
    top: 20rpx;

    
    
}
.account_main{
    width: 610rpx;

    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;

    margin-left: 140rpx;
    padding-top: 20rpx;

    
}
.title_container{
    display: flex;
    flex-flow: row wrap;
    align-items: flex-start;
    justify-content: flex-start;
    
}
.title{
    color: #5B6A92;
    font-weight: 600;
}
.content{
    width: 100%;
    height: 300rpx;
    overflow: hidden;
    

    background: #ddd;
}
.all{
    color: #5B6A92;

}

.members{
    width: 100%;

    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;

    position: relative;
}
.members .pull_down{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
}
.members .simple{
    width: 580rpx;
    margin-top: 20rpx;
}
.simple image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    margin-right: 12rpx;
}


/*成员详情*/
.detail{
    width: 100%;

    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;

    position: relative;
}
.detail .item{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;

}
.detail .item image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
}
.detail .item .should_pay{
    margin-left: 20rpx;
    
}
.detail .item .really_pay{
    position: absolute;
    right: 20rpx;
    
}


.pay{
    width: 100%;

    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;

    margin-top: 20rpx;

    background-color: greenyellow;
    
}
.pay .item{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;
    margin-bottom: 20rpx;

    
}
.pay .item .p1{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
}
.pay .item .p2{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    
}
.pay .item button{
    font-size: 15rpx;
    position: absolute;
    right: 20rpx;
    background-color: salmon;
}


























































.pics {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    border-bottom: 1rpx dashed #ddd;
    background-color: #efefef;
    padding-right: 20rpx;

    overflow: hidden; 

    transition: all 500ms ease;
}

.pic{
    width: 223rpx;
    height: 158rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
    position: relative;
}
