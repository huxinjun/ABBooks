@import "/global/dialog.wxss";

.container {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: flex-start;
    justify-content: flex-start;
    font-family: "黑体";
    color: #272636;
    
}

.accounts{
    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;
}

.account{
    
    /* background: gold; */
    position: relative;
    border-bottom: 1rpx solid #DEDEDE;
    padding-bottom: 30rpx;
}
.account_icon{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    left: 20rpx;
    top: 20rpx;

    
    
}
.account_main{
    width: 650rpx;

    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;

    margin-left: 100rpx;
    padding-top: 20rpx;

    position: relative;
    
}
.title_container{
    width: 100%;
    height: 60rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;

    position: relative;
    
}
.type_icon{
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}
.title{
    color: #5B6A92;
    font-weight: 600;
}
.tag{
    font-size: 20rpx;
    border-radius: 5rpx;
    padding-left: 5rpx;
    padding-right: 5rpx;
    padding-top: 2rpx;
    padding-bottom: 2rpx;
    text-align: center;
    color: white;
    margin-left: 10rpx;
}
.paid_in{
    background-color: #2BA245;
}
.inner_group{
    background-color: deeppink;
}
.date{
    font-size: 25rpx;
    width: 200rpx;
    text-align: right;
    position: absolute;
    right: 20rpx;
    top: 0;
    line-height: 60rpx;
    font-weight: 700;
    color: gray;
}
.content{
    width: 98%;
}
.all{
    color: #5B6A92;
    font-size: 25rpx;
}









.pics {
    width: 100%;
    display: flex;
    flex-flow: row wrap;
    align-items: center;
    justify-content: flex-start;
    padding-right: 20rpx;
    margin-left: -20rpx;

    overflow: hidden; 

    transition: all 500ms ease;
}

.pic{
    width: 176rpx;
    height: 132rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
    position: relative;
}


















.members{
    width: 100%;

    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;

    position: relative;
}
.members .pull_down{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    transition: all 300ms ease;
    z-index: 1;
}
.members .simple{
    width: 580rpx;
    overflow: hidden;

    display: flex;
    flex-flow: row wrap;
    align-items: flex-start;
    justify-content: flex-start;

    transition: all 300ms ease;
    margin-top: 20rpx;
}
.simple image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    margin-right: 12rpx;
}


/*成员详情*/
.detail{
    width: 100%;
    height: 0;
    overflow: hidden;
    transition: all 300ms ease;

    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
    justify-content: flex-start;
    font-size: 25rpx;

    position: relative;
}
.detail .item{
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;
    margin-top: 10rpx;

}
.detail .item image{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
}
.detail .item .should_pay{
    margin-left: 20rpx;
    
}
.detail .item .really_pay{
    position: absolute;
    right: 20rpx;
    
}

.pay_arrow{
    margin-top: 20rpx;
    width: 30rpx;
    height: 20rpx;
    margin-left: 50rpx;
}
.pay{
    width: 640rpx;

    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
    justify-content: flex-start;
    font-size: 25rpx;

    
    margin-right: 20rpx;

    background-color: #f3f3f5;
    border-radius: 10rpx;
}

.pay .full_item{
    display: flex;
    flex-flow: column nowrap;
    align-items: flex-start;
    justify-content: flex-start;
}


.pay .item{
    height: 80rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;

    padding: 0 15rpx ;
    
}
.pay .item .p1{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
}
.pay .item .pay_to{
    width: 50rpx;
    height: 22rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.pay .item .p2{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    
}
.pay .item button{
    font-size: 15rpx;
    position: absolute;
    background-color: salmon;
    right: 25rpx;
    color: white;
}


.pay .childItem{
    height: 80rpx;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: flex-start;

    
    
}

.pay .link_line{
    width: 80rpx;
    height: 95rpx;
    /* background: pink; */

    align-self: flex-end;
}

.pay .childItem .p1{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
}
.pay .childItem .pay_to{
    width: 50rpx;
    height: 22rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}
.pay .childItem .p2{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    
}
.pay .childItem button{
    font-size: 15rpx;
    position: absolute;
    background-color: salmon;
    right: 25rpx;
    color: white;
}


















.addr{
    margin-top: 20rpx;
    font-size: 25rpx;
    color: #6B6B6B;
}
.time{
    color: #6B6B6B;
    margin-top: 10rpx;
    font-size: 25rpx;
}
























































