<!--index.wxml-->
<view class="container">
    <view wx:for="{{list}}" wx:key="{{index}}">

        <view class="item" hover-class="item_hover">

            <image class="icon" src="{{item.icon}}"></image>
            <text class="name">{{item.name}}</text>

        </view>


    </view>



</view>



<view class="dialog_container" style='{{dialog}}'>
    <view class="dialog">
        <form bindsubmit="inviteUser" report-submit="true">
            <text class='dialog_title'>提醒</text>
            <text class='dialog_content'>温馨提示,确定添加帐友吗?</text>
            <view class='dialog_buttons' style='border-top: 1rpx solid #ccc;'>
                <button class='dialog_button_cancel' hover-class='dialog_button_cancel_hover' bindtap='dialogDissmiss'>取消</button>
                <button class='dialog_button_ok' hover-class='dialog_button_ok_hover' form-type='submit'>确定</button>
            </view>

        </form>
    </view>

</view>