/**index.wxss**/

.container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    font-family: "微软雅黑";
    color: #272636;
    font-size: 24rpx;
}
.item{
    width: 250rpx;
    height: 250rpx;
    border-right: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    box-sizing: border-box;
    
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: center;
    text-align: center;
    justify-content: center;

}
.item_hover{
    background-color: #ddd;
}

.icon{
    width: 80rpx;
    height: 80rpx;
}
.name{
    font-size: 26rpx;
    color: #667489;
    margin-top: 10rpx;
}












.dialog_container{
    width: 100%;
    height: 100%;
    background-color:rgba(0, 0, 0, 0.5);
    z-index: 1;
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;

    position: absolute;
    left: 0;
    top: 0;
}
.dialog{
    width: 400rpx;

    display: flex;
    flex-flow: column nowrap;
    justify-content: flex-end;
    align-items: center;

    background-color:rgba(255, 255, 255, 1);
    opacity: 1;
    border-radius: 10rpx;
}

.dialog_title{
    display: block;
    text-align: center;
    font-size: 30rpx;
    font-weight: 900;

    margin-top: 30rpx;
}
.dialog_content{
    display: block;
    text-align: center;
    
}

.dialog_buttons{
    height: 75rpx;
    width: 400rpx; 
    display: flex;
    flex-flow: row nowrap;
    justify-content: center;
    align-items: center;
    margin-top: 30rpx;
    
}
.dialog_buttons button{
    height: 100%;
    flex-grow: 1;
    border-top: 1rpx solid #667489;
    font-size: 30rpx;
    text-align: center;
    line-height: 75rpx;
    box-sizing: border-box;
}
.dialog_btn_left_hover{
    background-color: #ddd;
    border-bottom-left-radius: 10rpx;
}
.dialog_btn_right_hover{
    background-color: #ddd;
    border-bottom-right-radius: 10rpx;
}

