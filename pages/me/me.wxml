<view class="container" bindsubmit="onAddFormId" report-submit="true">
    <view class="banner">
        <view>
            <text class='todayPayTxt'>今日支出</text>
            <text class='todayPayCountTxt'>{{todayPaidCount>0?'('+todayPaidCount+'笔)':''}}</text>
            <text class='todayPayTxt'> :</text>
        </view>
        <text class='todayPay'>{{todayPaidMoney}}</text>
    </view>


    <view class="item" hover-class='item_hover' style='border-bottom:1rpx solid #ccc;display:none;' bindtap='coding'>
        <view class='flag'></view>
        <text class="name">我的账本</text>
        <image class="arrow" src="/img/right_arrow_normal.png"></image>
    </view>

    <view class="item" hover-class='item_hover' style='border-bottom:1rpx solid #ccc;' bindtap='gotoSummary'>
        <view class='flag'></view>
        <text class="name">数据统计</text>
        <image class="arrow" src="/img/right_arrow_normal.png"></image>
    </view>

    <view class="item" hover-class='item_hover' style='border-bottom:1rpx solid #ccc;' bindtap='gotoNotificationSetting'>
        <view class='flag'></view>
        <text class="name">提醒消息</text>
        <text class="count">{{notifValidCount}}</text>
    </view>

    <view class="item" hover-class='item_hover' style='border-bottom:1rpx solid #ccc;'>
        <view class='flag'></view>
        <text class="name">客服</text>

        <view class="contact">
            <contact-button type='default-light' />
            <contact-button type='default-light' />
            <contact-button type='default-light' />
