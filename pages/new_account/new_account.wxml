<scroll-view class="container" scroll-y scroll-into-view="{{scrollToView}}" scroll-with-animation="true" style="height:{{containerHeight}}px;">
    <view class="title">
        <image src="/img/type/gray_accounts.png"></image>
        <input placeholder="标题" maxlength="10" placeholder-class="placeholder_class" />
        <text>￥0.00</text>
    </view>


    <view class="desc">
        <view style="{{descSliderInfo.style.slider_container_pos}}{{descSliderInfo.style.slider_container_left}}">

            <view class="desc_main" capture-bind:touchstart="eventCaptureStart" capture-bind:touchmove="eventCaptureMove" 
                    capture-bind:touchend="eventCaptureEnd" capture-bind:touchcancel="eventCaptureCancel" capture-bind:tap="eventCaptureTap"
                    
                    catchtouchstart="{{eventStart}}" catchtouchmove="{{eventMove}}" catchtouchend="{{eventEnd}}" catchtouchcancel="{{eventCancel}}" data-index="{{descSliderInfo.index}}">
                <image class="desc_icon" src="/img/desc.png" data-index="{{descSliderInfo.index}}"></image>
                <input placeholder="备注" maxlength="50" placeholder-class="placeholder_class" data-index="{{descSliderInfo.index}}" />
                <image class="desc_add_pic" src="/img/camera.png" bindtap='chooseImage' data-index="{{descSliderInfo.index}}"></image>

            </view>


        </view>


        <view style="{{descSliderInfo.style.slider}}">
            <view style="{{descSliderInfo.style.layerStyle_1_0}}" bindtap="{{descSliderInfo.value.layerTap_1_0}}" data-index="{{descSliderInfo.index}}">{{descSliderInfo.value.layerText_1_0}}</view>
            <view style="{{descSliderInfo.style.layerStyle_1_1}}" bindtap="{{descSliderInfo.value.layerTap_1_1}}" data-index="{{descSliderInfo.index}}">{{descSliderInfo.value.layerText_1_1}}</view>
        </view>

    </view>






    <view class="pics">
        <image src="{{item.wx_path}}" mode="aspectFill" wx:for="{{images}}" wx:key="{{index}}"></image>


        <!-- <image src="/img/head.jpg" mode="scaleToFill" ></image>
        <image src="/img/head.jpg" mode="aspectFit"></image>
        <image src="/img/head.jpg" mode="aspectFill"></image>
        <image src="/img/head.jpg" mode="widthFix"></image>
        <image src="/img/head.jpg" mode="top"></image>
        <image src="/img/head.jpg" mode="bottom"></image>
        <image src="/img/head.jpg" mode="center"></image>
        <image src="/img/head.jpg" mode="left"></image> -->

    </view>

    <view class="date">
        <image class="date_icon" src="/img/date.png"></image>
        <picker mode="date" value="{{date}}" start="1970-01-01" end="{{today}}" bindchange="bindDateChange">{{account.date}}</picker>
        <span class="date_today" bindtap="getTodayDate">今天</span>
    </view>

    <view class="loc">
        <image class="loc_icon" src="/img/loc.png"></image>
        <input type="text" placeholder="位置" placeholder-class="placeholder_class" value='{{account.address_info.address}}' />
        <image class="loc_get" src="/img/get_loc.png" bindtap='chooseLocation'></image>
    </view>


    <view class="members">

        <view class="members_title" hover-class="members_title_hover" bindtap="addMember" id="members_title">
            <text class="members_title_txt">参与者</text>
            <text class="members_title_add">+</text>

        </view>

        <view wx:for="{{account.members}}" wx:key="{{index}}">
            <view class="memeber" style="{{item.style.member}}{{item.style.memberTrans}}{{item.style.deleteTrans}}">

                <view style="{{item.style.slider_container_pos}}{{item.style.slider_container_left}}">

                    <view class="member_main" capture-bind:touchstart="eventCaptureStart" capture-bind:touchmove="eventCaptureMove" 
                    capture-bind:touchend="eventCaptureEnd" capture-bind:touchcancel="eventCaptureCancel" capture-bind:tap="eventCaptureTap"
                    
                    catchtouchstart="{{eventStart}}" catchtouchmove="{{eventMove}}" catchtouchend="{{eventEnd}}" catchtouchcancel="{{eventCancel}}" data-index="{{index}}">
                        <image class="member_icon" src="/img/head.jpg" mode="aspectFill" data-index="{{index}}"></image>

                        <view class="member_content" data-index="{{index}}">
                            <text class="member_name" data-index="{{index}}">新军{{index}}</text>

                            <view class="member_tags" data-index="{{index}}">
                                <text class="member_name" data-index="{{index}}" style="{{item.style.tag0}}">{{item.value.tag0}}</text>
                                <text class="member_name" bindtap="showRule" data-index="{{index}}" style="{{item.style.tag1}}">{{item.value.tag1}}</text>
                                <text class="member_name" bindtap="showRulePaySelf" data-index="{{index}}" style="{{item.style.tag2}}">{{item.value.tag2}}</text>
                            </view>

                        </view>

                        <input class='member_paidin' type="text" value="{{item.value.paidin_input}}" bindinput="paidinInputValueChanged" data-index="{{index}}" type="digit" confirm-type="done" bindconfirm="savePaidIn" bindfocus="paidInFocus" maxlength='10' bindblur='paidInBlur'
                        />


                    </view>

                </view>

                <view class="member_rule" style="{{item.style.memberRule}}{{item.style.memberRuleTrans}}">

                    <radio-group bindchange="radioChange" style="{{item.style.memberRuleType}}{{item.style.memberRuleTypeTrans}}" data-index="{{index}}">
                        <label class="member_rule_label" wx:for="{{rule_tyles}}" wx:key="{{index}}">
                                <radio value="{{item.value}}" checked="true"/>{{item.name}}
                         </label>
                    </radio-group>
                    <input type="text" value="{{item.value.rule_input}}" placeholder="{{item.value.rule_input_placeholder}}" placeholder-class="placeholder_class" bindinput="ruleInputValueChanged" data-index="{{index}}" type="digit" confirm-type="done" bindconfirm="save"
                        maxlength='9' cursor-spacing="80" />
                    <button bind:tap="saveRule" data-index="{{index}}">保存</button>
                </view>

                <view style="{{item.style.slider}}">
                    <view style="{{item.style.layerStyle_0_0}}" bindtap="{{item.value.layerTap_0_0}}" data-index="{{index}}">{{item.value.layerText_0_0}}</view>
                    <view style="{{item.style.layerStyle_0_1}}" bindtap="{{item.value.layerTap_0_1}}" data-index="{{index}}">{{item.value.layerText_0_1}}</view>
                    <view style="{{item.style.layerStyle_0_2}}" bindtap="{{item.value.layerTap_0_2}}" data-index="{{index}}">{{item.value.layerText_0_2}}</view>
                </view>



            </view>


        </view>
    </view>


    <button bind:tap="uploadAccount" data-index="{{index}}">记一笔</button>
</scroll-view>