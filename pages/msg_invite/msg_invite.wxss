.listitem{
  width: 750rpx;
  height: 200rpx;
  position: relative;
  text-align: center;
  line-height: 200rpx;
  top: 0;
  overflow-x: hidden; 
  z-index: 3;
}
.item{
  width: 752rpx;
  height: 100%;
  position: absolute;
  background-color: #eee;
  z-index: 2;
}

.accept{
  height: 100%;
  background-color: #2BA245;
  color: white;
  position: absolute;
  top: 0;
  right: 0;
  text-shadow: 2rpx 2rpx 1rpx black
}
.refuse{
  height: 100%;
  background-color: #cdcdcd;
  color: white;
  position: absolute;
  top: 0;
  right: 150rpx;
  text-shadow: 2rpx 2rpx 1rpx black
}