.container {
    height: 750rpx;
    /* display: flex; *//* flex-direction: column;
  align-items: center;
  justify-content: space-between; */
    box-sizing: border-box;
    font-family: "微软雅黑";
    position: absolute;
    color: #272636;
}

.listitem {
    width: 750rpx;
    height: 200rpx;
    position: relative;
    top: 0;
    overflow-x: hidden;
    z-index: 3;
    border-top: 10rpx solid white
}

.item {
    width: 752rpx;
    height: 100%;
    position: absolute;
    background-color: #eee;
    z-index: 2;
}

.icon {
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    top: 25rpx;
    left: 2%;
    border-radius: 20rpx;
}

.content {
    width: 450rpx;
    height: 150rpx;
    overflow: hidden;
    position: absolute;
    left: 180rpx;
    top: 25rpx;
}

.name {
    position: absolute;
}

.msg {
    width: 450rpx;
    font-size: 24rpx;
    color: #666;
    position: absolute;
    bottom:50rpx;
    text-overflow: ellipsis;
     white-space:nowrap;
     overflow:hidden;
}
.time {
    font-size: 24rpx;
    color: #666;
    position: absolute;
    bottom: 0rpx;
}

.status { 
    position: absolute;
    right: 20rpx;
    line-height: 200rpx;
    vertical-align: middle;
    font-size: 30rpx;
    color: white;
    text-shadow: 2rpx 2rpx 1rpx #2ba245;
    
}






