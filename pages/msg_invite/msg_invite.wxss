/**index.wxss**/

.container {
    height: 750rpx;
    /* display: flex; *//* flex-direction: column;
  align-items: center;
  justify-content: space-between; */
    box-sizing: border-box;
    font-family: "微软雅黑";
    position: absolute;
    color: #272636;
}

.listitem {
    width: 750rpx;
    height: 100rpx;
    position: relative;
    overflow: hidden;
}

.item {
    width: 750rpx;
    display: flex;
    height: 100rpx;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: center;

    position: relative;
    background-color: #eee;
    
}

.icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 20rpx;
    margin: 20rpx;
}

.content {
    height: 100rpx;
    display: flex;
    flex-grow: 1;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: flex-start;
    
    overflow: hidden;
}


.msg {
    width: 450rpx;
    font-size: 24rpx;
    color: #006400;
    text-overflow: ellipsis;
     white-space:nowrap;
     overflow:hidden;
     display: none;
}
.time {

    font-size: 20rpx;
    color: #888;
}

.state {
    font-size: 20rpx;
    color: #777;
    margin-right: 10rpx;
}
