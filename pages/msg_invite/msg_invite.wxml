<!--index.wxml-->
<scroll-view class="container" scroll-y bindscroll='outterScroll' style="height:{{containerHeight}}px;">

    <view wx:for="{{datas}}" wx:key="{{index}}">
        <!-- {{index}}: {{item.value}} -->

        <scroll-view class="listitem" scroll-x bindscroll='innerScroll' style="{{item.style.deleteTrans}}">

            <view class="item" style="{{item.style.styleWidth}}{{item.style.styleLeft}}" bindtouchstart="touchstart" bindtouchmove="touchmove" bindtouchend="touchend" bindtouchcancel="touchcancel" data-index="{{index}}">
                <image class="icon" src="{{item.icon}}" data-index="{{index}}"></image>

                <view class="content" data-index="{{index}}">
                    <text class="name" data-index="{{index}}">邀请人：{{item.nickname}}</text>


                    <text class="msg" data-index="{{index}}">{{item.msg}}</text>
                    <text class="time" data-index="{{index}}">{{item.time}}</text>

                </view>
                <text class="status" data-index="{{index}}">{{item.statusStr}}</text>


            </view>



            <view style="{{item.style.sliderStyle}}">

                <view style="{{item.style.layerStyle_0_0}}" bindtap="{{item.style.layerTap_0_0}}" data-index="{{index}}">接受</view>
                <view style="{{item.style.layerStyle_0_1}}" bindtap="{{item.style.layerTap_0_1}}" data-index="{{index}}">拒绝</view>
                <view style="{{item.style.layerStyle_1_0}}" bindtap="{{item.style.layerTap_1_0}}" data-index="{{index}}">删除</view>
            </view>
        </scroll-view>
    </view>


</scroll-view>